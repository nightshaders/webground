.btn
  background #3498db
  background-image linear-gradient(#3498db, #2980b9)
  border-radius 6px
  font-family Arial
  color #ffffff
  font-size 14px
  padding 6px 8px
  border solid #1f628d 1px
  text-decoration none

.btn:hover
  background #3cb0fd
  background-image linear-gradient(#3cb0fd, #3498db)
  text-decoration none
